<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    tools:context="com.cs121.finalproject.ByDiningHallFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.GridLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/by_dining_hall_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:padding="4dp"

        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        grid:rowCount="2"
        grid:rowOrderPreserved="false"
        grid:useDefaultMargins="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            grid:layout_columnSpan="2"
            android:gravity="center"
            android:background="#FF33B5E5"
            android:text="Crown//Merrill" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:background="#FF33B5E5"
            android:text="Nine/Ten" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:background="#FF33B5E5"
            android:text="Eight/Oakes" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:background="#FF33B5E5"
            android:text="Cowell/Stevenson" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:background="#FF33B5E5"
            android:text="Porter/Kresge" />
    </android.support.v7.widget.GridLayout>

</FrameLayout>
