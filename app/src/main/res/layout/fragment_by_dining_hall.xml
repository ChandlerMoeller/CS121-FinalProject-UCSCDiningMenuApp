<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="60dp"
    tools:context="com.cs121.finalproject.ByDiningHallFragment">

    <android.support.v7.widget.GridLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/by_dining_hall_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:padding="4dp"

        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        grid:rowCount="2"
        grid:rowOrderPreserved="false"
        grid:useDefaultMargins="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button1"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            grid:layout_columnSpan="2"
            android:gravity="center"
            android:backgroundTint="#448AFF"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/BlackShadow"
            android:text="Crown/Merrill"
            android:onClick="test"
            android:tag="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button2"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:backgroundTint="#448AFF"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/BlackShadow"
            android:text="Nine/Ten"
            android:onClick="test"
            android:tag="2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:backgroundTint="#448AFF"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/BlackShadow"
            android:scaleType="fitXY"
            android:text="Eight/Oakes"
            android:onClick="test"
            android:tag="3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button4"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:backgroundTint="#448AFF"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/BlackShadow"
            android:text="Cowell/Stevenson"
            android:onClick="test"
            android:tag="4"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button5"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill"
            android:gravity="center"
            android:backgroundTint="#448AFF"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/BlackShadow"
            android:text="Porter/Kresge"
            android:onClick="test"
            android:tag="5"/>
    </android.support.v7.widget.GridLayout>

</FrameLayout>
